<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del dropdown -->
    <solid android:color="@color/background"/>

    <!-- Borde -->
    <stroke
        android:width="2dp"
        android:color="@color/primary"/>

    <!-- Esquinas redondeadas -->
    <corners android:radius="12dp"/>

    <!-- Padding opcional -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
